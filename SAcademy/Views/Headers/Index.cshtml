@model IEnumerable<SAcademy.Models.Header>

@{
    Layout = "_LayoutDashboard";
}

    @* <p>
        <a asp-action="Create">Create New</a>
    </p> *@


<div id="myCarousel" class="carousel slide carousel-fade" data-ride="carousel" data-interval="1000">
    <ol class="carousel-indicators">
        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#myCarousel" data-slide-to="1"></li>
        <li data-target="#myCarousel" data-slide-to="2"></li>
    </ol>


    @foreach (var item in Model)
    {
        var height = string.Concat(item.HeightSection, "em");
        var Top = string.Concat(item.BVTopSize, "em");
        var left = string.Concat(item.BVLeftSize, "em");
        var size = string.Concat(item.BVSize, "vw");
        <button style="top:-3em; left:6em;" type="button" class="border-0 bg-transparent position-absolute" title="Modifier" data-toggle="modal" data-target="@("#EditHeader-" + item.Id)" data-url="@Url.Action($"Edit/{item.Id}")">
            <img src="~/img/edit.png">
        </button>
        @await Html.PartialAsync("_EditHeaderPartialView",item)
        <div class="carousel-inner">
            @if (item.Background != null)
            {
                <div class="carousel-item active" style="height:@height !important;">
                    <img class="first-slide animated zoomInDown" src="data:image/*;base64,@Convert.ToBase64String(item.Background)" alt="" style="height:@height !important;">
                    <div class="container">
                        <div class="carousel-caption d-block text-left" style="position:relative !important; left:@left !important; top:@Top !important;">
                            <div class="animated fadeInDown">@Html.Raw(item.Content)</div><br>
                            @if (item.Button != null)
                            {

                                <button class="btn font-weight-bold downClick"
                            style="color:@item.BVColor; font-size:@size; background:@item.ButtonBgColor; border-radius:40px;">
                                    @item.Button
                                </button>
                            }
                            @if (item.Video != null)
                            {
                                <a class="" href="@item.Video">
                                    <img src="~/img/play.png">
                                </a>
                            }
                        </div>
                    </div>
                </div>
            }
            @foreach (var img in item.Images)
            {
                <div class="carousel-item" style="height:@height !important;">
                    <img class="second-slide animated zoomInDown" src="data:image/*;base64,@Convert.ToBase64String(img.Data)" alt="" style="height:@height !important;">
                    <div class="container">
                        <div class="carousel-caption d-block text-center" style="position:relative !important; left:0 !important; top:@Top !important;">
                            <div class="animated fadeInDown">@Html.Raw(item.Content)</div><br>
                            @if (item.Button != null)
                            {

                                <button class="btn font-weight-bold downClick"
                            style="color:@item.BVColor; font-size:@size; background:@item.ButtonBgColor; border-radius:40px;">
                                    @item.Button
                                </button>
                            }
                            @if (item.Video != null)
                            {
                                <a class="" href="@item.Video">
                                    <img src="~/img/play.png">
                                </a>
                            }
                        </div>
                    </div>
                </div>

            }
            @if (item.BackgroundTwo != null)
            {
                <div class="carousel-item" style="height:@height !important;">
                    <img class="third-slide animated zoomInDown" src="~/img/hero1.jpg" alt="" style="height:@height !important;">
                    <div class="container">
                        <div class="carousel-caption d-block text-right" style="position:relative !important; left:0 !important; top:@Top !important;">
                            <div class="animated fadeInDown">@Html.Raw(item.Content)</div><br>
                            @if (item.Button != null)
                            {

                                <button class="btn font-weight-bold downClick"
                            style="color:@item.BVColor; font-size:@size; background:@item.ButtonBgColor; border-radius:40px;">
                                    @item.Button
                                </button>
                            }
                            @if (item.Video != null)
                            {
                                <a class="" href="@item.Video">
                                    <img src="~/img/play.png">
                                </a>
                            }
                        </div>
                    </div>
                </div>
            }
        </div>

    }
    <a class="carousel-control-prev" href="#myCarousel" role="button" data-slide="prev" style="visibility:hidden;">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#myCarousel" role="button" data-slide="next" style="visibility:hidden;">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>

    

