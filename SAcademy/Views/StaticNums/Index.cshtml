@model IEnumerable<SAcademy.Models.StaticNum>

@{
    Layout = "_LayoutDashboard";
}
@*<p>
    <a asp-action="Create">O</a>
</p>*@
<div class="w-75 m-auto">
    <section class="three d-flex justify-content-center">
        <div class="nums d-flex w-100 justify-content-between">
@foreach (var item in Model)
{
    <div>
        <button type="button" class="border-0 bg-transparent" title="Modifier" data-toggle="modal" data-target="@("#EditStatiNum-"+item.Id)" data-url="@Url.Action($"Edit/{item.Id}")">
            <img src="~/img/edit.png">
        </button>
        @await Html.PartialAsync("_EditStaticNumPartialView",item)
        <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
    </div>
    <div class="num bg-light p-2">
        @if(item.image != null)
        {
            <img class="" style="width:90px; height:90px;" src="data:image/*;base64,@(Convert.ToBase64String(item.image))" />
        }else{
            <img class="" style="width:90px; height:90px;" src="~/img/iconForm3.png" />
        }
        <h5>@item.Number</h5>
        <h5>@item.Description</h5>
    </div>
}
        </div>
    </section>

</div>
