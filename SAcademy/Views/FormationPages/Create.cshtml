@model SAcademy.Models.FormationPage

@{
    Layout = "_LayoutDashboard";
}

<h1>Create</h1>

<h4>FormationPage</h4>
<hr />
<div class="">
    <div class="w-75 m-auto">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Content" class="control-label"></label>
                <textarea asp-for="Content" id="Content" class="form-control"></textarea>
                <span asp-validation-for="Content" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ContentBgColor" class="control-label"></label>
                <input type="color"  asp-for="ContentBgColor" class="form-control" />
                <span asp-validation-for="ContentBgColor" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ContentHeight" class="control-label"></label>
                <input type="number" asp-for="ContentHeight" class="form-control" />
                <span asp-validation-for="ContentHeight" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

