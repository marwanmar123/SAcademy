@model IEnumerable<SAcademy.Models.About>

@{
    Layout = "_LayoutDashboard";

}


<p>
    <a asp-action="Create">O</a>
</p>
<div class="w-75 m-auto">
    @foreach (var item in Model) {
        <button type="button" class="border-0 bg-transparent" title="Modifier" data-toggle="modal" data-target="@("#EditAbout-"+item.Id)" data-url="@Url.Action($"Edit/{item.Id}")">
            <img src="~/img/edit.png">
        </button>
        @await Html.PartialAsync("_EditAboutPartialView",item)
        var size = string.Concat(item.TitleSize, "px");
        var videoWidth = string.Concat(item.VideoWidth, "px");
        var videoHeight = string.Concat(item.VideoHeight, "px");
        <p class="text-center" style="color:@item.TitleColor; font-size:@size; font-weight:bold;">@item.Title</p>
        <div class="d-flex">
                @if (item.Video == null && item.image == null)
                {
                    <div class="m-auto">
                        @Html.Raw(item.Content)
                    </div>
                }
                else if (item.Video == null)
                {
                    <div>
                    <img class="pr-4" width="@videoWidth" height="@videoWidth" src="data:image/*;base64,@(Convert.ToBase64String(item.image))" />
                    </div>
                    <div class="d-flex flex-column">
                        @Html.Raw(item.Content)
                    </div>
                }
                else
                {
                    <div>
                    <iframe class="pr-4" width="@videoWidth" height="@videoWidth" src="@item.Video" title="YouTube video player" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
                    </div>
                    <div class="d-flex flex-column">
                        @Html.Raw(item.Content)
                    </div>
                }
            
            
        </div>
    }
</div>
