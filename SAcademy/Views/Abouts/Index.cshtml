@model IEnumerable<SAcademy.Models.About>

@{
    Layout = "_LayoutDashboard";

}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>

@foreach (var item in Model) {
    <button type="button" class="border-0 bg-transparent" title="Modifier" data-toggle="modal" data-target="@("#EditAbout-"+item.Id)" data-url="@Url.Action($"Edit/{item.Id}")">
        <img src="~/img/edit.png">
    </button>
    @await Html.PartialAsync("_EditAboutPartialView",item)

    <p>@item.Title</p>

    @Html.Raw(item.Content)

    <img src="data:image/*;base64,@(Convert.ToBase64String(item.image))" />
        <iframe width="560" height="315" src="@item.Video" title="YouTube video player" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>

}

