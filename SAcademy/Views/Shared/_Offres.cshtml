<script>

    $.ajax({
        url: '/FTypes',
        type: 'GET',
        success: function (res) {
            $.each(res, function (index, option) {
                $("#types").append(
                    `
                        <div>
                            <div class="p-3 m-2 div1" style="background:${option.bgCard}; width:${option.sizeCard}vw; height:100%;">
                                <p>${option.content}</p>
                                <a style="color:${option.color}; text-decoration:none; font-weight:bold;" href="ftypes/details/${option.id}">#${option.name}</a>
                            </div>
                        </div>
                    `
                );
            });
            $(".Dtype").append(
                    `
                        <div class="descTypes">
                            <div class="descTypes-div1">
                                <div class="square"></div>
                                <h5 class="">Formations Courtes</h5>
                                <p class="">Des Modules d'initiation et de formation <br>De deux heures à 5 jours (en moyenne)</p>
                            </div>
                            <div class="descTypes-div2">
                                <div class="square"></div>
                                <h5 class="">Formations Longues</h5>
                                <p class="">Des formations de 4 semaines à 9 mois<br>(avec des dispositifs d'alternance ou stage)</p>
                            </div>
                        </div>
                    `
                );
        }
    });


