@model List<SAcademy.Models.Header>


<div class="mb-5">
    <div id="carousel" class="carousel slide" data-ride="carousel">
        <ol class="carousel-indicators">
            <li data-target="#carousel" data-slide-to="0" class="active"></li>
            <li data-target="#carousel" data-slide-to="1"></li>
            <li data-target="#carousel" data-slide-to="2"></li>
        </ol>
        @foreach (var item in Model)
        {
            var height = string.Concat(item.HeightSection, "em");
            var Top = string.Concat(item.BVTopSize, "em");
            var left = string.Concat(item.BVLeftSize, "em");
            var size = string.Concat(item.BVSize, "vw");
            <div class="carousel-inner">
                @if (item.Background != null)
                {
                    <div class="carousel-item active" style="
                                  background-image: url('data:image/*;base64,@Convert.ToBase64String(item.Background)');
                                  background-size: cover;
                              ">
                        <div class="caption" style="position:relative; top:@Top; left:@left;">
                            @Html.Raw(item.Content)
                        @if (item.Button != null)
                        {

                            <a href="@item.ButtonLink" class="btn font-weight-bold"
                                style="color:@item.BVColor; font-size:@size; background:@item.ButtonBgColor; border-radius:40px;">
                                @item.Button
                            </a>
                        }
                        @if (item.Video != null)
                        {
                            <a class="" href="@item.Video">
                                <img src="~/img/play.png">
                            </a>
                        }
                        </div>
                    </div>
                }
                @foreach (var img in item.Images)
                {
                    <div class="carousel-item" style="
                          background-image: url('data:image/*;base64,@Convert.ToBase64String(img.Data)');
                          background-size: cover;
                          ">
                        <div class="caption" style="position:relative; top:@Top; left:@left;">
                            @Html.Raw(item.ContentTwo)
                            @if (item.ButtonTwo != null)
                            {

                                <a href="@item.ButtonTwoLink" class="btn font-weight-bold headerBtnTwo"
                                        style="color:@item.BVColor; font-size:@size; background:@item.ButtonBgColor; border-radius:40px; position:relative; top:11em; left:30em;">
                                    @item.ButtonTwo
                                </a>
                            }
                        </div>
                    </div>
                }
                @if (item.BackgroundTwo != null)
                {
                    <div class="carousel-item"
                        style="
                            background-image: url('img/hero3.png');
                            background-size: cover;
                          ">
                        <div class="caption" style="position:relative; top:@Top; left:@left;">
                            @Html.Raw(item.ContentThree)
                            @if (item.ButtonThree != null)
                            {

                                <a href="@item.ButtonThreeLink" class="btn font-weight-bold"
                                        style="color:@item.BVColor; font-size:@size; background:@item.ButtonBgColor; border-radius:40px;">
                                    @item.ButtonThree
                                </a>
                            }
                        </div>
                    </div>
                }
            </div>
        }

        <a class="carousel-control-prev"
           href="#carousel"
           role="button"
           data-slide="prev"
           style="visibility:hidden;">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next"
           href="#carousel"
           role="button"
           data-slide="next"
           style="visibility:hidden;">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
</div>



