@model List<SAcademy.Models.Header>


<div id="myCarousel" class="carousel slide carousel-fade" data-ride="carousel" data-interval="3000">
    <ol class="carousel-indicators">
        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#myCarousel" data-slide-to="1"></li>
        <li data-target="#myCarousel" data-slide-to="2"></li>
    </ol>
    @foreach (var item in Model)
    {
        var height = string.Concat(item.HeightSection, "em");
        var Top = string.Concat(item.BVTopSize, "em");
        var left = string.Concat(item.BVLeftSize, "em");
        var size = string.Concat(item.BVSize, "vw");
        <div class="carousel-inner">

            @if (item.Background != null)
            {
                <div class="carousel-item active" style="height:@height !important;">
                    <img class="second-slide animated zoomInDown" src="data:image/*;base64,@Convert.ToBase64String(item.Background)" alt="" style="height:@height !important;">
                    <div class="container">
                        <div class="carousel-caption d-block d-none text-left" style="position:relative !important; left:@left !important; top:@Top !important;">
                            <div class="animated fadeInDown">@Html.Raw(item.Content)</div><br>
                            @if (item.Button != null)
                            {

                                <button class="btn font-weight-bold" id="downClick"
                            style="color:@item.BVColor; font-size:@size; background:@item.ButtonBgColor; border-radius:40px;">
                                    @item.Button
                                </button>
                            }
                            @if (item.Video != null)
                            {
                                <a class="" href="@item.Video">
                                    <img src="~/img/play.png">
                                </a>
                            }
                        </div>
                    </div>
                </div>
            }
            @foreach (var img in item.Images)
            {
                <div class="carousel-item" style="height:@height !important;">
                    <div class=" d-flex flex-row">
                        <img class="w-50" src="data:image/*;base64,@Convert.ToBase64String(img.Data)" style="height:@height !important;">
                        <div class="w-50"
                            style="background: @item.BgContent; padding:2em;">
                            @Html.Raw(item.ContentTwo)
                        </div>
                    </div>
                </div>

            }
            @if (item.BackgroundTwo != null)
            {
                <div class="carousel-item" style="height:@height !important;">
                    <div class=" d-flex flex-row">
                        <img class="w-50" src="data:image/*;base64,@Convert.ToBase64String(item.BackgroundTwo)" style="height:@height !important;">
                        <div class="w-50"
                     style="background: @item.BgContentTwo; padding:2em;">
                            @Html.Raw(item.ContentThree)
                        </div>
                    </div>
                </div>
            }
        </div>
    }


    <a class="carousel-control-prev" href="#myCarousel" role="button" data-slide="prev" style="visibility:hidden;">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#myCarousel" role="button" data-slide="next" style="visibility:hidden;">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>


<script>


    $(document).ready(function () {
        $("#downClick").click(function () {
            var x = $(window).scrollTop();
            $('html, body').animate({ scrollTop: x + 2829.600341796875 })
        });
    });
</script>