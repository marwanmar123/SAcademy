@model List<SAcademy.Models.About>

<div class="p-3" id="about">


@foreach (var item in Model)
{
        if(item.Visible == true)
        {
            var size = string.Concat(item.TitleSize, "vw");
            <p class="text-center p-3 about-title" style="color:@item.TitleColor; font-size:@size; font-weight:bold;">@item.Title</p>
            <div class="d-flex aboutSplit">
                @if (item.Video == null && item.image == null)
                {
                    <div class="m-auto about-content">
                        @Html.Raw(item.Content)
                    </div>
                }
                else if (item.Video == null)
                {
                    <div>
                        <img class="pr-4 aboutImg" width="@item.VideoWidth" height="@item.VideoHeight" src="data:image/*;base64,@(Convert.ToBase64String(item.image))" />
                    </div>
                    <div class="d-flex flex-column about-content">
                        @Html.Raw(item.Content)
                    </div>
                }
                else
                {
                    <div>
                        <iframe class="pr-4 aboutvideo" width="@item.VideoWidth" height="@item.VideoHeight" src="@item.Video" title="YouTube video player" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
                    </div>
                    <div class="d-flex flex-column about-content">
                        @Html.Raw(item.Content)
                    </div>
                }


            </div>
        }
       
}
</div>