@model List<SAcademy.Models.Statistics>

<div class="p-3" id="statistics">


    @foreach (var item in Model)
    {
        if (item.Visible == true)
        {
            var size = string.Concat(item.TitleSize, "vw");
            <p class="text-center p-2  pt-3 mt-3 Titles" style="color:@item.TitleColor; font-size:@size; font-weight:bold; font-family:@item.FontFamily;">@item.Title</p>
            @await Component.InvokeAsync("StaticNum")
                
        }

    }
</div>
