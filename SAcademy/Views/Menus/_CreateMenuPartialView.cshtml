@model SAcademy.Models.Menu



<div class="modal fade" id="CreateMenu" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Create Menu</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="TitleMenu" class="control-label"></label>
                <input asp-for="TitleMenu" class="form-control" required />
                <span asp-validation-for="TitleMenu" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Link" class="control-label"></label>
                <input asp-for="Link" class="form-control" required />
                <span asp-validation-for="Link" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label"> Color Menu</label>
                <input type="color" asp-for="Color" class="form-control" required />
                <span asp-validation-for="Color" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ColorFooter" class="control-label"></label>
                <input type="color" asp-for="ColorFooter" class="form-control" required />
                <span asp-validation-for="ColorFooter" class="text-danger"></span>
            </div>
            <div class="form-group">
                        <label class="control-label"> Size Menu</label>
                <input type="number" asp-for="Size" class="form-control" required />
                <span asp-validation-for="Size" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SizeFooter" class="control-label"></label>
                <input type="number" asp-for="SizeFooter" class="form-control" required />
                <span asp-validation-for="SizeFooter" class="text-danger"></span>
            </div>
            <button type="submit" class="float-right text-white pr-2 pl-2" title="Save" style="border-radius:25px; background:black;">
                <img src="~/img/plus.png" style="width:1.3em;">
                Ajouter
            </button>
        </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
