@model Menu
@{
    List<SelectListItem> font = new List<SelectListItem>()
        {
            new SelectListItem() { Text="Nunito Sans", Value="Nunito Sans"},
            new SelectListItem() { Text="Nunito Black", Value="Nunito Black"},
            new SelectListItem() { Text="Nunito", Value="Nunito"},
            new SelectListItem() { Text="'Nunito' bold", Value="'Nunito' bold"},
            new SelectListItem() { Text="Roboto", Value="Roboto"},
            new SelectListItem() { Text="Comic Sans MS", Value="Comic Sans MS"},
        };
}

<div class="modal fade" id="EditMenu-@Model.Id" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Edit Menu</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="Id" />
                    <div class="form-group">
                        <label asp-for="TitleMenu" class="control-label"></label>
                        <input asp-for="TitleMenu" class="form-control" />
                        <span asp-validation-for="TitleMenu" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Link" class="control-label"></label>
                        <input asp-for="Link" class="form-control" />
                        <span asp-validation-for="Link" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label class="control-label"> Color Menu</label>
                        <input type="color" asp-for="Color" class="form-control" />
                        <span asp-validation-for="Color" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="ColorFooter" class="control-label"></label>
                        <input type="color" asp-for="ColorFooter" class="form-control" required />
                        <span asp-validation-for="ColorFooter" class="text-danger"></span>
                    </div>
                    <div>
                        <select asp-for="FontFamily" asp-items="@font" class="form-control custom-select">
                            <option>-Select Font family-</option>
                            <option value="@Model.FontFamily">@Model.FontFamily</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label class="control-label"> Size Menu</label>
                        <input type="number" asp-for="Size" class="form-control" />
                        <span asp-validation-for="Size" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="SizeFooter" class="control-label"></label>
                        <input type="number" asp-for="SizeFooter" class="form-control" required />
                        <span asp-validation-for="SizeFooter" class="text-danger"></span>
                    </div>
                    <button type="submit" class="float-right text-white pr-2 pl-2" title="Save" style="border-radius:25px; background:black;">
                        <img src="~/img/save.png" style="width:1.3em;">
                        Save
                    </button>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>


