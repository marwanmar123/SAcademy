                        <div class="d-flex" style="width:26vw;">
                            <input type="checkbox"  style="width:3em;" class="themId common m-1" name="themes" onClick="filterFormations()" value="${option.id}"> <span class=" nFilter" style="font-size:20px;">${option.title}</span>
