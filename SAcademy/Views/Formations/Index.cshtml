                    var mode = null;
                    var cityDistance = null;
                    var url = option.id;
                    if (option.status == true) {
                        inscrButton = `<a href="/formations/details/${option.id}" class="inscription" style="background:${option.offreFBgColorButton}!important;">Inscription</a>`;
                    } else {
                            inscrButton = `<p class="text-dark m-auto font-weight-bold" style="width:59%; background:${option.offreFBgColorButton}!important; padding:0.2em;">Terminé</p>`;
                    }
                    if (option.mode.name == "Distanciel") {
                        mode = `<h6 class="mb-4" ></h6>`;
                        cityDistance = "Distanciel"
                    } else {
                        mode = `<h6 class="mb-4" > ${option.mode.name} </h6>`;
                        cityDistance = option.ville.name;
                    }
                    $("#formation").append(
                        `
                                <div class="mb-3">
                                    <div class="card card-body mb-2 formation m-auto" style="width:90%; background:${option.offreFBgColor}!important;">
                                    <div class="media align-items-center align-items-lg-start text-center text-lg-left flex-column flex-lg-row" >
                                        <div class="mr-2 mb-3 mb-lg-0 text-center">
                                            <div class="d-flex justify-content-center align-items-center text-center">
                                                <img class="fmrImg mr-1" src="/img/agenda.png" style="width:3.3vw; margin-left:5px;"/>
                                                    <div class="pt-3" style="margin-left:6px;">
                                                    <p class="w-100"> Du ${du}</p>
                                                    <p class="w-100"> Au ${au}</p>
                                                </div>
                                            </div>
                                                <div class="d-flex justify-content-center align-items-center">
                                                <img class="fmrImg mr-1" src="/img/time.png" style="width:4vw;"/>
                                                <h6 class="pt-3">${st} => ${et}</h6>
                                            </div>
                                        </div>

                                        <div class="media-body text-center">
                                                    <h5 class="font-weight-bold" style="color:${option.offreFColor};font-size:${option.offreFSize}px;">${option.title}</h5>
                                            <p class="descFormation">${option.description}</p>
                                            <h5 style="color:#ce0033;"><span class="text-muted"><img style="width:5%;" src="/img/local.png"><br/></span>${cityDistance}</h5>
                                            <img class="fmrImg" src="/img/iconForm1.png" style="width:2vw;"/>
                                            <img class="fmrImg" src="/img/iconForm2.png" style="width:2vw;"/>
                                            <img class="fmrImg" src="/img/iconForm4.png" style="width:2vw;"/>
                                        </div>

                                        <div class="mt-3 mt-lg-0 ml-lg-3 text-center p-2 formation-3">
                                            <img class="fmrImg" src="/img/iconForm3.png" style="width:3em;"/>
                                            <h5>${option.thematic.title}</h5>
                                            ${mode}
                                            ${inscrButton}
                                        </div>
                                    </div>
                                </div>
                                </div>
                        `
                    );
                });
            }
            if (data.length == 0) {
                $("#formation").html('')
                $("#formation").append(
                    `
                            <div class="p-3 m-auto d-flex justify-content-center align-items-center formation" style="height:25vh; width:90%;">
                                <h5>Aucune formation de prévu actuellement, restez informés via nos réseaux!</h5>
                            </div>
                        `
                );
            }

        }
    });
}

    function get_filter(class_name) {
        var filter = [];
        $('.' + class_name + ':checked').each(function () {
            filter.push($(this).val());
        });
        return filter;
    }


