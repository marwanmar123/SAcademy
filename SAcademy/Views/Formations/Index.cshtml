@model List<SAcademy.Models.Formation>

@{
    ViewData["Title"] = "Nos formations";

    var tr = Model.Where(x => x.Status == true);
    var fl = Model.Where(x => x.Status == false);
}
<style>
    input[type=checkbox], input[type=radio]{
        accent-color:#ce0033;
    }
</style>



<div class="yeld">
