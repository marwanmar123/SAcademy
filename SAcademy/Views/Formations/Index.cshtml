<script defer>



    $.ajax({
        url: '/Villes/GetVilleAPI',
        type: 'GET',
        success: function (res) {
            $.each(res, function (index, option) {
                var frmCount = option.formations.length;
                $("#villes").append(
                    `
                        <div class="d-flex">
                                <input type="checkbox" style="width:1.5vw;" class="villeId common m-1" name="villes" onClick="filterFormations()" value="${option.id}"> <span class=" nFilter" style="font-size:.8vw;">${option.name} (${frmCount})</span>
                        </div>
                    `
                );
            });
        }
    });

    $.ajax({
        url: 'Thematics/ThematicsApi',
        type: 'GET',
        success: function (res) {
            
            $.each(res, function (index, option) {
                var frmCount = option.formations.length;
                $("#ftype").append(
                    `
                        <div class="d-flex" style="width:26vw;">
                            <input type="checkbox"  style="width:1.5vw;" class="themId common m-1" name="themes" onClick="filterFormations()" value="${option.id}"> <span class=" nFilter" style="font-size:.8vw;">${option.title} (${frmCount})</span>
                        </div>
                    `
                );
            });
        }
    });


    $.ajax({
        url: '/Modes/GetModeAPI',
        type: 'GET',
        success: function (res) {
            $.each(res, function (index, option) {
                var frmCount = option.formations.length;
                $("#modes").append(
                    `
                        <div class="d-flex">
                                <input type="checkbox" style="width:1.5vw;" class="modeId common m-1" name="modes" onClick="filterFormations()" value="${option.id}"> <span class=" nFilter"  style="font-size:.8vw;">${option.name} (${frmCount})</span>
                        </div>
                    `
                );
            });
        }
    });





    filterFormations();

    $('.common').click(function () {
        filterFormations();
    });


    function convertDigitIn(str){
        return str.split('-').reverse().join('-');
    }

    

    function filterFormations() {

    //debugger

    var modes = get_filter('modeId');
    var themes = get_filter('themId');
    var villes = get_filter('villeId');

    $.ajax({
        url: '/Formations/Filter',
